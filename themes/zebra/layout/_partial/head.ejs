<meta charset="utf-8">
<meta name="X-UA-Compatible" content="IE=edge, chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<meta name="keywords" content="<%= config.keywords %>">

<%
	var tags = page.tags;
	if (tags && tags.length) {
		tags=tags.data.map(function(doc) {
			return doc.name
		}).join(',')
	}
%>
<meta name="keywords" content="<%= tags %>">

<link rel="stylesheet" href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.bootcss.com/github-markdown-css/2.8.0/github-markdown.min.css">
<link rel="stylesheet" href="<%- url_for('/less/main.css')%>">
<link rel="icon" href="<%- url_for(config.favicon) %>">

<%
	var title = page.title
	if (is_home()) {
		title=config.title;
	} else if (is_category()) {
		title=__('category') + ': '+page.category;
	} else if (is_tag()) {
		title=__('tag') + ': '+page.tag;
	} else if (is_archive()) {
		title=__('archive');
	}
	if (is_month()) {
		title+=': ' + page.year + '/' + page.month;
	}
	if (is_year()) {
		title+=': ' + page.year;
	}

	title!=title ? title : config.title
%>
<title><%= title %></title>
<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
<script src="<%= url_for('/js/article.js') %>"></script>
